Row{
	Pile{
		layout{
			weight{1}
			dy{min}
		}
		ImageLabel{
			image{morda_img_gauge_scale}
			keepAspectRatio{true}
			layout{
				dx{fill} dy{min}
			}
		}

		Margins{
			defs{w{0.08}}
			layout{dx{fill} dy{fill}}
			weightLeft{@{w}}
			weightRight{@{w}}
			weightTop{@{w}}
			weightBottom{@{w}}

			Gauge{
				name{gauge}
				layout{dx{fill} dy{fill}}
				armFraction{0.75}
				startAngle{225}
				endAngle{-45}
			}
		}
	}
	VerticalSlider{
		name{gauge_slider}
		layout{
			dy{max}
		}
	}
}
